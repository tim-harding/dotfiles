{
  "autocmd": {
    "body": [
      "vim.api.nvim_create_autocmd(${1:event}, {",
      "  group = vim.api.nvim_create_augroup(${2:name}, {}),",
      "  pattern = '*',",
      "  callback = function() $3 end",
      "})"
    ],
    "prefix": "autocmd"
  },
  "fn": {
    "body": [
      "function $1()",
      "  $2",
      "end"
    ],
    "prefix": "fn"
  }
}
